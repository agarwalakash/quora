<div style="float: right; margin-right: 10px;">
	<% if user_signed_in? %>
		<%= link_to "My Topics", topics_path %>
		<%= link_to "My Questions", questions_path %>
		<%= link_to "My Followers", follows_path %>
	<% end %>
</div>

<% if @questions.present? %>
	<h3>Questions List</h3>
	<table>
		<% @questions.each do |question| %>
			<tr>
				<td><%= link_to question.content, question_path(question.id) %></td>
			</tr>		
		<% end %>
	</table>
<% else %>
	<h3>Sorry, No Questions are available.</h3>
<% end %>

